installdir="$(envsubst < INSTALL_LOCATION)" # Directory where everything will be installed to
download_dir="/tmp/FlightGear_Sources" # Directory where the source codes will be downloaded to.
buildir="/dev/shm/FlightGear_Compiler_Output" # Temporary directory where cmake will run from.
read -r version < VERSION # Using read command to get version information from the file VERSION

### INTRODUCTION PART
clear
echo ""
echo "#====== Welcome to FlightGearBuilder $version !"
echo "#====== This script will remove all downloaded files, compiler left overs and"
echo "#====== uninstall FlightGear that was previously installed using FlightGearBuilder"

# Waits for the user to press a key to continue.
echo ""
echo "#====== Press any key to continue or Ctrl + C to cancel."
read -rsn1
clear

# Removing files.
echo "#====== Removing previously downloaded files."
echo "Removing $download_dir"
rm -rf "${download_dir:?}"
echo "#====== Removing Compiling left overs."
echo "Removing $buildir"
rm -rf "${buildir:?}"
echo "#====== Uninstalling FlightGear."
echo "Removing $installdir
rm -rf "${installdir:?}"
